{
  "name": "whats-for-dinner",
  "version": "1.0.0",
  "description": "This is an app to help users choose what to eat for dinner",
  "main": "src/server.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
    "start": "node src/server.js",
    "predeploy": "npm audit",
    "deploy": "git push heroku main",
    "postdeploy": "npm run migrate:production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhammock1/express-boilerplate.git"
  },
  "keywords": [],
  "engines": {
    "node": "12.19.0"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rhammock1/express-boilerplate/issues"
  },
  "homepage": "https://github.com/rhammock1/express-boilerplate#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "knex": "^0.21.12",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "postgrator-cli": "^3.2.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "postgrator-cli": "^3.2.0",
    "supertest": "^6.0.1"
  }
}
